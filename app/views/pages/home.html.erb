<div class="home-callout text-center container-fluid">
    <h1>Welcome to StockHunt</h1>
    <h3>A community for investors.</h3>
</div>
<div class="container home-signup-links">
    <div class="row">
        <% if user_signed_in? %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Your Profile</h2>
                <% if current_user.profile %>
                <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
                <%= link_to "View your profile", user_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <% else %>
                <%= link_to "Create your profile", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
                <% end %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">The Community</h2>
                <%= link_to "Visit the community", "#", class: 'btn btn-default btn-lg btn-block'%>
            </div>
        </div>
    <% else %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Basic Membership</h2>
                <h4>Sign up for free and get our weekly newsletter</h4>
                <br>
                <%= link_to "Sign Up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Pro Membership</h2>
                <h4>Sign up for the pro account for 29$/month and get access to the community</h4>

                <%= link_to "Sign Up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-primary btn-lg btn-block' %>
            </div>
        </div>
        <% end %>
    </div>
</div>
